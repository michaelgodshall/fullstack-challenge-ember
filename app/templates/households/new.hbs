<h1>New Household</h1>

<form {{action 'create' on="submit"}}>
  <div class="form-group {{if model.errors.address 'has-danger'}}">
    <label for="address" class="form-control-label">Address</label>
    {{input type="text" name="address" class="form-control" value=model.address}}
    {{#each model.errors.address as |error|}}
      <span class="form-control-feedback">{{error.message}}</span>
    {{/each}}
  </div>
  <div class="form-group {{if model.errors.city 'has-danger'}}">
    <label for="city" class="form-control-label">City</label>
    {{input type="text" name="city" class="form-control" value=model.city}}
    {{#each model.errors.city as |error|}}
      <span class="form-control-feedback">{{error.message}}</span>
    {{/each}}
  </div>
  <div class="form-group {{if model.errors.state 'has-danger'}}">
    <label for="state" class="form-control-label">State</label>
    {{input type="text" name="state" class="form-control" value=model.state}}
    {{#each model.errors.state as |error|}}
      <span class="form-control-feedback">{{error.message}}</span>
    {{/each}}
  </div>
  <div class="form-group {{if model.errors.zip 'has-danger'}}">
    <label for="zip" class="form-control-label">Zip</label>
    {{input type="text" name="zip" class="form-control" value=model.zip}}
    {{#each model.errors.zip as |error|}}
      <span class="form-control-feedback">{{error.message}}</span>
    {{/each}}
  </div>
  <div class="form-group {{if model.errors.number_of_bedrooms 'has-danger'}}">
    <label for="number_of_bedrooms" class="form-control-label">Number of bedrooms</label>
    {{input type="text" name="number_of_bedrooms" class="form-control" value=model.number_of_bedrooms}}
    {{#each model.errors.number_of_bedrooms as |error|}}
      <span class="form-control-feedback">{{error.message}}</span>
    {{/each}}
  </div>
  <div class="btn-toolbar justify-content-between" role="toolbar">
    <div>
      <button type="submit" class="btn btn-primary mr-2" role="button">Save</button>
      {{!-- <a href="#" class="btn btn-secondary">Save and add person</a> --}}
    </div>
    <div>
      {{#link-to 'households' class="btn btn-secondary"}}Cancel{{/link-to}}
    </div>
  </div>
</form>
